				.col-lg-6.offset-lg-1.col-12.d-none.d-lg-block#product-about-img
					img.shadow-lg.wow.fadeInUp(src="../images/product-about-img.png" data-wow-duration="1.25s" data-wow-offset="40")
	section#product-features
		div
			h3.wow.fadeInUp(data-wow-duration="1.25s" data-wow-offset="40") ADVANCED INTERNET TRADING
			a.btn.btn-outline-light.text-uppercase.wow.fadeInUp(href="#" data-wow-duration="1.5s" data-wow-offset="40") more
		div
			h3.wow.fadeInUp(data-wow-duration="1.5s" data-wow-offset="40") TRADES & DEALERS WORKSTATION
			a.btn.btn-outline-light.text-uppercase.wow.fadeInUp(href="#" data-wow-duration="1.75s" data-wow-offset="40") more
		div
			h3.wow.fadeInUp(data-wow-duration="1.75s" data-wow-offset="40") MOBILE & TABLET FRIENDLY
			a.btn.btn-outline-light.text-uppercase.wow.fadeInUp(href="#" data-wow-duration="2s" data-wow-offset="40") more
		div
			h3.wow.fadeInUp(data-wow-duration="2s" data-wow-offset="40") RISK MANAGEMENT & BACK OFFICE
			a.btn.btn-outline-light.text-uppercase.wow.fadeInUp(href="#" data-wow-duration="2.25s" data-wow-offset="40") more

	section#product-users
		.container
			.row
				h1.col-12.text-center.wow.fadeInUp#product-users-title(data-wow-duration="1.25s" data-wow-offset="40") WHO’S USING TRADENET
				.owl-carousel.owl-theme#product-users-owl
					.item
						img(src="../images/client-1.png", alt="")
