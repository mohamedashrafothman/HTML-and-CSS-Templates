						img(src="../images/client-6.png", alt="")
					.item
						img(src="../images/client-7.png", alt="")
					.item
						img(src="../images/client-8.png", alt="")
					.item
						img(src="../images/client-9.png", alt="")
					.item
						img(src="../images/client-10.png", alt="")
					.item
						img(src="../images/client-11.png", alt="")
					.item
						img(src="../images/client-12.png", alt="")
				

	section#product-video
		.container
			.row.flex-column.align-items-center.mx-auto
				h1.wow.fadeInUp(data-wow-duration="1.25s" data-wow-offset="40") KN President Mr.Mohammad Attiya’s Interview to World Finance Magazine
				a.wow.fadeInUp(href="#" data-wow-duration="1.5s" data-wow-offset="40" data-toggle="modal" data-target="#playVideoModal")
					span.icon-play-button
					p.wow.fadeInUp(data-wow-duration="1.75s" data-wow-offset="40") play video
			#playVideoModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='playVideoModalLabel', aria-hidden='true')
				.modal-dialog.modal-dialog-centered(role='document')
					.modal-content
						.modal-body.p-0
							iframe.w-100.h-100#cartoonVideo(src='https://www.youtube.com/embed/fJ9rUzIMcZQ', frameborder='0', allowfullscreen='')


	section#product-demo
		.container
			.row.flex-column.align-items-center.mx-auto
				img.wow.fadeInUp(src="../images/tradenet-logoW-lg.png", alt="" data-wow-duration="1.25s" data-wow-offset="40")
				h1.wow.fadeInUp(data-wow-duration="1.5s" data-wow-offset="40") TRY THE INTELLIGENT EQUITY TRADING PLATFORM
				a.btn.btn-primary.btn-lg.text-uppercase.wow.fadeInUp(href="#" data-toggle="modal" data-target="#request-product" data-wow-duration="1.75s" data-wow-offset="40") request a demo
	
	#request-product.modal.fade.bd-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='request-productTitle', aria-hidden='true')
		.modal-dialog.modal-dialog-centered.modal-lg(role='document')
			.modal-content
				.modal-header.flex-column.border-0
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span.lnr.lnr-cross(aria-hidden='true') 
					h1#request-productTitle.text-center.w-100.modal-title request a demo
				.modal-body.border-0
					form.container(action="#")
						.row
							.col-lg-6.col-12.d-flex.flex-column.justify-content-around
								.form-label-group
									input#request-name.form-control.form-control-lg(type='text', placeholder='Name', required='')
									label(for='request-name') Name
								.form-label-group
									input#request-phone.form-control.form-control-lg(type='text', placeholder='Phone', required='')
									label(for='request-phone') Phone
								.form-label-group
									input#request-email.form-control.form-control-lg(type='email', placeholder='Email', required='')
									label(for='request-phone') Email
								.form-label-group
									input#request-orgnization.form-control.form-control-lg(type='text', placeholder='Orgnization', required='')
									label(for='request-orgnization') Orgnization
							.col-lg-6.col-12.d-flex.flex-column.justify-content-around
								.form-label-group
									input#request-role.form-control.form-control-lg(type='text', placeholder='Role', required='')
									label(for='request-role') Role
								.form-group
									select#request-product.form-control.form-control-lg
										option(disabled selected) Select Product
										option(value="1") 1
										option(value="2") 2
										option(value="3") 3
								.form-label-group
									textarea#request-notes.form-control.form-control-lg(rows="6" placeholder="Notes" required)
									label(for="request-notes") Notes
							
				.modal-footer.border-0
					button.btn.btn-primary.btn-lg.mx-auto.text-white(type='button') request a demo

	
	
	
	
	
	include ./partials/footerSec.pug